{
  "name": "collab-intelligence",
  "displayName": "Collab Intelligence",
  "description": "Multi-agent development coordination â€” orchestration UI for the Collaborative Intelligence System",
  "version": "0.1.0",
  "publisher": "collab-intelligence",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "workspaceContains:**/.claude/collab"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "collab.startSystem",
        "title": "Start Collab System",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.stopSystem",
        "title": "Stop Collab System",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.createWorkerSession",
        "title": "Create Worker Session",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.createQualitySession",
        "title": "Create Quality Session",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.createTaskBrief",
        "title": "Create Task Brief",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.checkpoint",
        "title": "Create Checkpoint",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.sendMessage",
        "title": "Send Message to Agent",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.searchMemory",
        "title": "Search Memory",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.viewDashboard",
        "title": "View Dashboard",
        "category": "Collab Intelligence"
      },
      {
        "command": "collab.validateAll",
        "title": "Validate All Quality Gates",
        "category": "Collab Intelligence"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "collab-intelligence",
          "title": "Collab Intelligence",
          "icon": "media/icons/collab.svg"
        }
      ]
    },
    "views": {
      "collab-intelligence": [
        {
          "id": "collab.agentStatus",
          "name": "Agents"
        },
        {
          "id": "collab.findings",
          "name": "Findings"
        },
        {
          "id": "collab.tasks",
          "name": "Tasks"
        },
        {
          "id": "collab.memory",
          "name": "Memory"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "collab.sendMessage",
          "when": "view == collab.agentStatus",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "pretest": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.95.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
